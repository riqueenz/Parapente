if ! command -v socat
then
    clear
    echo "Instalando socat"
    sudo apt update
    sudo apt install -y socat
fi
if ! command -v xclip
then
    clear
    echo "Instalando xclip"
    sudo apt update
    sudo apt install -y xclip
fi
clear
echo "Aperte uma tecla para continuar a configuração"
read tecla
cd ..
PASTA=$(pwd)
clear
echo "Configurando portas seriais"
./Wine.AppImage regedit /s $PASTA/Condor/SerialComm.reg
cp $PASTA/Condor/XCSoarData "$HOME/.wine32/drive_c/users/$USER/My Documents/XCSoarData"
echo "Configurando XCSoar"
echo "111-YHL0-53NI" | xclip -selection clipboard
./Wine.AppImage regedit /s $PASTA/Condor/SerialComm.reg
socat PTY,link=$HOME/.wine32/dosdevices/com6 PTY,link=$HOME/.wine32/dosdevices/com7&./Wine.AppImage Condor/Condor.exe&./Wine.AppImage Condor/XCSoar.exe
rm -rf $HOME/.wine32
